<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="io.github.sds100.keymapper.ui.ListState" />

        <variable
            name="viewModel"
            type="io.github.sds100.keymapper.ui.mappings.keymap.TriggerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/epoxyRecyclerViewTriggers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{viewModel.state.triggerKeyListModels instanceof ListState.Empty ? View.GONE : View.VISIBLE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/textViewRadioGroupHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="100"
            tools:visibility="visible" />

        <TextView
            style="@style/RecyclerViewPlaceholderTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/triggers_recyclerview_placeholder"
            android:visibility="@{viewModel.state.triggerKeyListModels instanceof ListState.Empty ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/buttonRecordKeys"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <RadioGroup
            android:id="@+id/radioGroupParallelTriggerClickType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview_padding_left"
            android:layout_marginEnd="@dimen/cardview_padding_right"
            android:checkedButton="@id/radioButtonShortPress"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="@{viewModel.state.clickTypeRadioButtonsVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/buttonRecordKeys"
            app:layout_constraintEnd_toStartOf="@id/radioGroupTriggerMode"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonShortPress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="@{viewModel.state.shortPressButtonChecked}"
                android:onCheckedChanged="@{(view, checked) -> viewModel.setShortPressButtonChecked(checked)}"
                android:text="@string/radio_button_short_press" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonLongPress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="@{viewModel.state.longPressButtonChecked}"
                android:onCheckedChanged="@{(view, checked) -> viewModel.setLongPressButtonChecked(checked)}"
                android:text="@string/radio_button_long_press" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonDoublePress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="@{!viewModel.state.longPressButtonChecked &amp;&amp; !viewModel.state.shortPressButtonChecked}"
                android:text="@string/radio_button_long_press"
                android:visibility="gone" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewRadioGroupHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{viewModel.state.triggerModeButtonsEnabled}"
            android:paddingTop="8dp"
            android:text="@string/press_dot_dot_dot"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroupTriggerMode"
            app:layout_constraintStart_toStartOf="@id/radioGroupTriggerMode" />

        <RadioGroup
            android:id="@+id/radioGroupTriggerMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview_padding_left"
            android:layout_marginEnd="@dimen/cardview_padding_right"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/buttonRecordKeys"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/radioGroupParallelTriggerClickType">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonParallel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="@{viewModel.state.parallelTriggerModeButtonChecked}"
                android:enabled="@{viewModel.state.triggerModeButtonsEnabled}"
                android:onCheckedChanged="@{(view, checked) -> viewModel.setParallelTriggerModeChecked(checked)}"
                android:text="@string/radio_button_parallel" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonSequence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="@{viewModel.state.sequenceTriggerModeButtonChecked}"
                android:enabled="@{viewModel.state.triggerModeButtonsEnabled}"
                android:onCheckedChanged="@{(view, checked) -> viewModel.setSequenceTriggerModeChecked(checked)}"
                android:text="@string/radio_button_sequence" />


            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioButtonUndefined"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="@{!viewModel.state.parallelTriggerModeButtonChecked &amp;&amp; !viewModel.state.sequenceTriggerModeButtonChecked}"
                android:text="@string/radio_button_sequence"
                android:visibility="gone" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonRecordKeys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:onClick="@{() -> viewModel.onRecordTriggerButtonClick()}"
            android:text="@{viewModel.state.recordTriggerButtonText}"
            app:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/button_record_trigger" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>