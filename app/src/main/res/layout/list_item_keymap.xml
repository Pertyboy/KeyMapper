<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="keymapUiState"
            type="io.github.sds100.keymapper.ui.mappings.keymap.KeymapListItem.KeymapUiState" />

        <variable
            name="selectionState"
            type="io.github.sds100.keymapper.ui.mappings.keymap.KeymapListItem.SelectionUiState" />

        <variable
            name="onCardClick"
            type="View.OnClickListener" />

        <variable
            name="onCardLongClick"
            type="View.OnLongClickListener" />

        <variable
            name="onChipClick"
            type="io.github.sds100.keymapper.ui.callback.OnChipClickCallback" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/MyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:onClick="@{onCardClick}"
        app:onLongClick="@{onCardLongClick}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/cardview_padding_left"
            android:paddingTop="@dimen/cardview_padding_top"
            android:paddingEnd="@dimen/cardview_padding_right"
            android:paddingBottom="@dimen/cardview_padding_bottom">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="@{selectionState.isSelected}"
                android:onClick="@{onCardClick}"
                android:visibility="@{selectionState.isSelectable ? View.VISIBLE : View.GONE}"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewExtraInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{keymapUiState.extraInfo}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="?attr/colorError"
                    android:textSize="14sp"
                    android:visibility="@{keymapUiState.extraInfo.empty ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Disabled • No Actions • No Triggers"
                    tools:visibility="gone" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupActionsAndConstraints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/ActionChipGroup"
                    android:visibility="@{keymapUiState.chipList.isEmpty ? View.GONE : View.VISIBLE}"
                    app:chipUiModels="@{keymapUiState.chipList}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewExtraInfo"
                    app:onChipClickCallback="@{onChipClick}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textViewTriggerHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/trigger_header"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textStyle="bold"
                    android:visibility="@{keymapUiState.hasTrigger ? View.VISIBLE : View.GONE}"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chipGroupActionsAndConstraints" />

                <TextView
                    android:id="@+id/textViewTrigger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{keymapUiState.triggerDescription}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:visibility="@{keymapUiState.hasTrigger ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewTriggerHeader"
                    app:layout_constraintTop_toTopOf="@+id/textViewTriggerHeader"
                    tools:text="Long Press Volume Down → Alt → 1" />

                <TextView
                    android:id="@+id/textViewFlagsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/option_list_header"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textStyle="bold"
                    android:visibility="@{keymapUiState.hasOptions ? View.VISIBLE : View.GONE}"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewTrigger" />

                <TextView
                    android:id="@+id/textViewSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{keymapUiState.optionsDescription}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:visibility="@{keymapUiState.hasOptions ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textViewFlagsHeader"
                    app:layout_constraintTop_toTopOf="@id/textViewFlagsHeader"
                    tools:text="Vibrate" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>